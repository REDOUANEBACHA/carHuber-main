// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  //DATABASE_URL  "mysql://redouanestore:tassa@host.docker.internal:3306/store"
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  name        String?
  username    String
  Achat       Achat[]
  Commentaire Commentaire[]
}

model Achat {
  id         Int     @id @default(autoincrement())
  id_user    Int
  id_produit Int
  produit    Produit @relation(fields: [id_produit], references: [id])
  user       User    @relation(fields: [id_user], references: [id])
}

model Produit {
  id               Int           @id @default(autoincrement())
  name             String
  prix             Int
  promotion        Int
  code_promo       String
  description      String
  id_menuCategorie Int
  Achat            Achat[]
  Commentaire      Commentaire[]
  Menucategorie    Menucategorie @relation(fields: [id_menuCategorie], references: [id])
}

model Categorie {
  id             Int             @id @default(autoincrement())
  type_categorie String
  Menucategorie  Menucategorie[]
}

model Menucategorie {
  id           Int       @id @default(autoincrement())
  id_categorie Int
  name         String
  Categorie    Categorie @relation(fields: [id_categorie], references: [id])
  Produit      Produit[]
}

model Commentaire {
  id          Int      @id @default(autoincrement())
  commentaire String
  date        DateTime
  id_user     Int
  id_produit  Int
  produit     Produit  @relation(fields: [id_produit], references: [id])
  user        User     @relation(fields: [id_user], references: [id])
}

